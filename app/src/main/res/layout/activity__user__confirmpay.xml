<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_User_Confirmpay">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:textSize="12dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="75dp"
            android:text="Your Driver is this far away"
            android:textColor="@color/colorAccent"

            android:textSize="24dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:textSize="24dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom">
        <Button
            android:id="@+id/finish_transaction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/finish_transaction"
            android:text="Finish"
            />
        <Button
            android:id="@+id/cancel_transaction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/cancel_transaction"
            android:text="Cancel"/>
        <Button
            android:id="@+id/report_transaction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/report_transaction"
            android:text="Report"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>